pipeline {
	agent{
            	label 'kuba'  // Ensure this matches your Jenkins node label if you are using Kubernetes
	}
	environment {
		DOCKER_IMG = "puyt"
		DOCKER_TAG = "latest"
		DEPLOY_NAME = "node-app"
		KUBE_DEPLOY = "kube-Mark-10.2/deployment.yml"
		KUBE_SERV = "kube-Mark-10.2/service.yml"
	}

	stages {
		stage('checkout code') {
			steps {
				checkout scm
			}
		}
		stage('pull docker') {
           		 steps {
				script {
                		 // Use the docker:dind image for Docker-in-Docker (DinD)
                    		docker.image('docker:19.03-dind').inside('--privileged') {
                        	// The --privileged flag is needed to allow Docker to run inside the container
                        		sh 'docker run hello-world'
                        		sh 'docker -D pull kamalsai33/puyt:latest'
                   			 }
                		}
           		 }
        	}
		stage('deploy to kubernet') {
			steps {
				script {
				  sh """
              				echo "Current Directory Contents:"
              				ls -la
              				kubectl get svc
     		      			"""
				   sh """
				      kubectl apply -f ${KUBE_DEPLOY} -f ${KUBE_SERV}
				      kubectl rollout status deployment/${DEPLOY_NAME}
				      """
				}
			}
		}
	}

	post {
		success {
			echo 'pipeline complete'
		}
		failure {
			echo 'pipeline failed'
		}
	}
}


